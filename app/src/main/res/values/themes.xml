<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QuizApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/bluekish </item>
        <item name="colorPrimaryVariant">@color/bluekish </item>
<!--        <item name="colorPrimaryVariant">@color/purple_700</item>-->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="progressBarStyle">@drawable/custom_gradient</item>

        <item name="textInputStyle">@style/MyTextInputLayout</item>
        <item name="editTextStyle">@style/MyEditText</item>

        <item name="buttonStyle">@style/Theme.QuizApp.Button</item>
        <item name="radioButtonStyle">@style/Theme.QuizApp.RadioButton</item>
    </style>

    <style name="Theme.QuizApp.ProgressBar" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <!--        <item name="android:indeterminateDrawable">@drawable/custom_gradient</item>-->
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/custom_gradient</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginBottom">15dp</item>
        <!--            android:scaleY="1.5"-->
        <!--            android:layout_marginVertical="15dp"-->

    </style>

    <style name="Theme.QuizApp.Button" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@drawable/custom_gradient1</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Theme.QuizApp.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_gravity">start</item>
        <item name="android:background">@drawable/custom_radiobutton</item>
                <item name="android:paddingLeft">@dimen/p_defaultx100</item>
        <item name="android:paddingEnd">@dimen/p_defaultx100</item>
    </style>

    <style name="Theme.QuizApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.QuizApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.QuizApp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

